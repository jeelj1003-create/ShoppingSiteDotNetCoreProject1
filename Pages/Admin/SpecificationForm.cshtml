@page
@model ShoppingSiteDotNetCore.Pages.Admin.SpecificationFormModel
@{
    Layout = "_Admin";
}

<div class="page-inner">
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">Specification Form</h3>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
            <a asp-page="/Admin/SpecificationList" class="btn btn-primary btn-round"><i class="fa fa-angle-left"></i>&nbsp;Back</a>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h2>Specification </h2>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Specification Name</label>
                <select asp-for="SpecificationTypeTblDTO.SpecificationName" class="form-control">
                </select>
                <span class="text-danger" asp-validation-for="SpecificationTypeTblDTO.SpecificationName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Specification Type</label>
                <select asp-for="SpecificationTypeTblDTO.SpecificationType" class="form-control">
                    <option value="-- Select Type --">-- Select Type --</option>
                    <option value="Text">Text</option>
                    <option value="Option">Option</option>
                </select>
                <span class="text-danger" asp-validation-for="SpecificationTypeTblDTO.SpecificationType"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Status</label>
                <select class="form-control" asp-for="SpecificationTypeTblDTO.Status">
                    <option value="">-- Select Status --</option>
                    <option value="Active">Active</option>
                    <option value="Deactive">deactive</option>
                </select>
                <span class="text-danger" asp-validation-for="SpecificationTypeTblDTO.Status"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" name="btnSubmit">Submit</button>
        </div>
    </form>
</div>
@section JavaScriptContent
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
